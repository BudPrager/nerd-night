@model IList<NerdNight.Models.PreferredDay>

<table>
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(model => model[0].DayOfWeek)</td>
            <td>@Html.DisplayNameFor(model => model[0].AllDay)</td>
            <td>@Html.DisplayNameFor(model => model[0].Morning)</td>
            <td>@Html.DisplayNameFor(model => model[0].Afternoon)</td>
            <td>@Html.DisplayNameFor(model => model[0].Evening)</td>
        </tr>
    </thead>
    <tbody>
        @for(int i=0; i< Model.Count(); i++)
        {
            @Html.EditorFor(d => Model[i]);
        }
    </tbody>
</table>
