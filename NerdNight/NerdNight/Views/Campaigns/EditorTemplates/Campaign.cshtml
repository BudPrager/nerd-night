@model NerdNight.Models.Campaign

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.HiddenFor(model => model.GroupID)

        <div class="form-group">
            @Html.LabelFor(model => model.Group, "Group", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Group.GroupName)
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CampaignName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CampaignName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CampaignName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Player Requirements</label>
            <div class="col-md-10">
                <div>
                    @Html.CheckBoxFor(model => model.RequiresAllPlayers)
                    @Html.LabelFor(model => model.RequiresAllPlayers, "Requires All Players", new { @class = "sub-label" })
                </div>
                <div>
                    @Html.LabelFor(model => model.MinimumPlayers, "Minimum Players", new { @class = "sub-label" })
                    @Html.EditorFor(model => model.MinimumPlayers, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MinimumPlayers, "", new { @class = "text-danger" }) @{/*TODO - Validate that this isn't greater than the amount of non dm players*/}
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@ViewBag.ButtonText class="btn btn-default" />
            </div>
        </div>
    </div>
}